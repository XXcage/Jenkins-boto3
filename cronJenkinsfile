pipeline {
    agent any
    triggers {
        cron('*/5 * * * *')
    }
    stages {
        stage('Get last successful build from permalink') {
            steps {
                script {
                    def jobName = 'Dockerfile'
                    def lastSuccessfulBuildNum = sh(script: "cat ../../jobs/${jobName}/builds/permalinks | grep lastSuccessfulBuild | awk '{print \$2}'", returnStdout: true).trim()
                    echo "Last successful build of ${jobName} is #${lastSuccessfulBuildNum}"
                }
            }
        }
        stage('Run Latest Docker Image') {
            environment {
                DOCKER_IMAGE = 'rzlinux0/proj3:latest'
            }
            steps {
                script {
                    def imageName = DOCKER_IMAGE.split(':')[0]
                    def latestImage = "${imageName}:${lastSuccessfulBuildNum}"
                    
                    docker.image(latestImage).pull()
                    docker.image(latestImage).run()
                }
            }
        }


    }
}
 
